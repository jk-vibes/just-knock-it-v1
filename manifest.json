      "icons": [{ "src": "icon.svg", "sizes": "192x192" }]
    },
    {
      "name": "View Map",
      "url": "./?view=map",
      "description": "See your dreams on the map",
      "icons": [{ "src": "icon.svg", "sizes": "192x192" }]
    }
  ],
  "screenshots": [
    {
      "src": "icon.svg",
      "sizes": "512x512",
      "type": "image/svg+xml",
      "form_factor": "wide",
      "label": "Home Screen"
